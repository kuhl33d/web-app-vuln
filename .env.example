# Environment variables for w3bxAN Web Vulnerability Scanner
# Copy this file to .env and update with your values

# Flask application secret key (required)
SECRET_KEY=your-secret-key-here

# CSRF and HTTPS Configuration
# CSRF protection is disabled by default for GitHub Codespaces compatibility
WTF_CSRF_ENABLED=False
# The following settings are not used when CSRF is disabled
# WTF_CSRF_SSL_STRICT=False
# WTF_CSRF_TIME_LIMIT=3600
SESSION_COOKIE_SECURE=True
REMEMBER_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True

# Email configuration for vulnerability alerts 
# (CURRENTLY DISABLED - email functionality is not active)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your-email@example.com
# MAIL_PASSWORD=your-email-password
# MAIL_DEFAULT_SENDER=your-email@example.com

# Database configuration (optional, defaults to SQLite)
# DATABASE_URI=postgresql://username:password@localhost/vulnerability_scanner

# Logging configuration
LOG_LEVEL=DEBUG
# LOG_FILE=app.log